citHeader( "To cite package ’RMTstat’ in publications use:" )

desc <- packageDescription( "RMTstat" )
year <- sub( ".*(2[[:digit:]]{3})-.*", "\\1", desc$Date )
vers <- paste( "R package version", desc$Version )

citEntry( entry="Manual", 
          title="RMTstat: Distributions and Statistics from Random Matrix Theory", 
         author=personList( as.person( "Patrick O. Perry" ),
                            as.person( "Iain M. Johnstone" ),
                            as.person( "Zongming Ma" ),
                            as.person( "Morteza Shahram" ) ),
           year=year, 
           note=vers, 
    textVersion=paste( "Patrick O. Perry, ",
                       "Iain M. Johnstone, ",
                       "Zongming Ma, and " ,
                       "Morteza Shahram ",
                       "(", year, "). ",
                       "RMT: Distributions and Statistics from Random Matrix Theory. ",
                       vers, ".", 
                       sep="" ) ) 
